{
  "manifest_version": 3,
  "name": "SiteSnooper",
  "version": "1.0",
  "description": "Whenever you navigate to a new page or switch tabs, SiteSnooper sends ONLY THE DOMAIN to Home Assistant so that you can create automations based on your internet distraction level.",
  "permissions": ["activeTab", "storage", "tabs", "webNavigation"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [ "paho-mqtt.js" ],
      "extension_ids": ["*"],
      "matches": [ "*://*/*" ]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icon128.png"
  },
  "options_page": "settings.html"

}

